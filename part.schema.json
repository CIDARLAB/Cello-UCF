{
	"$id": "https://cellocad.org/v2/part.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "part",
	"description": "A representation of a genetic component.",
	"type": "object",
	"properties": {
		"name": {
			"type": "string",
			"description": "The name of the part."
		},
		"type": {
			"type": "string",
			"enum": ["promoter", "cds", "ribozyme", "rbs", "terminator", "cassette"]
		},
		"dnasequence": {
			"description": "The DNA sequence of the part.",
			"type": "string",
			"pattern": "^[AaTtGgCc]*$"
		},
		"uri": {
			"description": "A URI of the part.",
			"type": "string",
			"format": "uri"
		}
	},
	"required": ["name", "type", "dnasequence"]
}
