{
	"$id": "variable.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "variable",
	"description": "A representation of a free variable in a function.",
	"type": "object",
	"properties": {
		"name": {
			"description": "The variable name.",
			"type": "string"
		},
		"map": {
			"description": "A reference to a numerical object.",
			"type": "string",
			"pattern": "^#/(/[A-Za-z0-9_]+)+$"
		}
	},
	"required": [
		"name"
	]
}
